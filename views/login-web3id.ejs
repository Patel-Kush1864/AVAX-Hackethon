<%- include('partials/header', { title: 'Login with Web3Id', active: 'login' }) %>
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    theme: {
      extend: {
        colors: {
          'electric-blue': '#00D4FF',
          'cyber-purple': '#8B5CF6',
          'dark-purple': '#4C1D95',
          'neon-blue': '#0EA5E9',
          'space-black': '#0F0F23',
          'dark-slate': '#1E1E3F',
        }
      }
    }
  }
</script>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    color: #fff;
  }

  .gradient-bg {
    background: linear-gradient(135deg, #0F0F23 0%, #4C1D95 50%, #00D4FF 100%);
    background-size: 400% 400%;
    animation: gradientBG 15s ease infinite;
  }
  @keyframes gradientBG {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .login-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    padding: 2rem;
    width: 100%;
    max-width: 450px;
    color: #fff;
    backdrop-filter: blur(12px);
    box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3), 0 0 40px rgba(139, 92, 246, 0.2);
    animation: float 6s ease-in-out infinite;
  }
  @keyframes float {
    0%,100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .login-card h2 {
    font-weight: 700;
    font-size: 2rem;
    text-shadow: 0 0 15px rgba(0,212,255,0.7);
  }

  .btn-glow {
    background: linear-gradient(45deg, #00D4FF, #8B5CF6);
    border: none;
    border-radius: 50px;
    padding: 12px 35px;
    font-weight: bold;
    color: #fff;
    box-shadow: 0 0 20px rgba(0,212,255,0.5), 0 0 40px rgba(139,92,246,0.3);
    transition: all 0.3s ease;
  }
  .btn-glow:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(0,212,255,0.8), 0 0 50px rgba(139,92,246,0.6);
  }
</style>

<section class="gradient-bg min-h-screen flex items-center justify-center relative overflow-hidden px-4">
  <!-- Animated background shapes -->
  <div class="absolute inset-0 opacity-10 overflow-hidden">
    <div class="absolute top-20 left-10 w-2 h-2 bg-electric-blue rounded-full"></div>
    <div class="absolute top-40 right-20 w-3 h-3 bg-cyber-purple rounded-full"></div>
    <div class="absolute bottom-40 left-20 w-2 h-2 bg-electric-blue rounded-full"></div>
    <div class="absolute bottom-60 right-10 w-1 h-1 bg-cyber-purple rounded-full"></div>
  </div>

  <!-- Web3 Login card -->
  <div class="login-card mx-auto">
    <!-- Logo / Brand -->
    <div class="mb-6 text-center">
        <div class="mx-auto mb-2 h-16 w-16 flex items-center justify-center">
        <img src="/images/versatile.id.png" alt="Versatile ID Logo" class="h-18 w-18 object-contain rounded-full">
        </div>

        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Welcome Back</h2>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Sign in securely with your Web3 Identity
        </p>
    </div>

   <form action="/login/web3id" method="POST" class="row g-3">
    <div class="col-12">
        <label for="web3id" class="block text-sm mb-1">Web3ID</label>
        <input type="text" name="web3id" id="web3id" 
            class="form-control" 
            placeholder="Enter your Web3ID" 
            required />
    </div>

    <div class="col-12 text-center">
        <button type="submit" class="btn btn-glow w-100">Sign in with Web3ID</button>
    </div>

    <div class="col-12 text-center mt-3">
        <p>Donâ€™t have an account? <a href="/register" class="text-electric-blue hover:underline">Register</a></p>
    </div>
    </form>

  </div>
</section>
