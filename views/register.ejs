<%- include('partials/header', { title: 'Register', active: 'register' }) %>
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    theme: {
      extend: {
        colors: {
          'electric-blue': '#00D4FF',
          'cyber-purple': '#8B5CF6',
          'dark-purple': '#4C1D95',
          'neon-blue': '#0EA5E9',
          'space-black': '#0F0F23',
          'dark-slate': '#1E1E3F',
        }
      }
    }
  }
</script>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    color: #fff;
  }

  .gradient-bg {
    background: linear-gradient(135deg, #0F0F23 0%, #4C1D95 50%, #00D4FF 100%);
    background-size: 400% 400%;
    animation: gradientBG 15s ease infinite;
  }
  @keyframes gradientBG {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .register-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    padding: 2rem;
    width: 100%;
    max-width: 950px;
    color: #fff;
    backdrop-filter: blur(12px);
    box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3), 0 0 40px rgba(139, 92, 246, 0.2);
    animation: float 6s ease-in-out infinite;
  }
  @keyframes float {
    0%,100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .register-card h2 {
    font-weight: 700;
    font-size: 2rem;
    text-shadow: 0 0 15px rgba(0,212,255,0.7);
  }

  label {
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 5px;
    display: block;
    color: #e0e0e0;
  }

  .form-check-label a {
    color: #007bff;           /* Bootstrap default blue */
    text-decoration: underline;
    font-weight: 500;
    cursor: pointer;
  }

  .form-check-label a:hover {
    color: #0056b3;           /* Darker blue on hover */
  }

 
  .form-select option {
    background: #0F0F23;
    color: #fff;
  }

  ::placeholder { color: rgba(255, 255, 255, 0.6); }
  option { color: #000; }


  .btn-glow {
    background: linear-gradient(45deg, #00D4FF, #8B5CF6);
    border: none;
    border-radius: 50px;
    padding: 12px 35px;
    font-weight: bold;
    color: #fff;
    box-shadow: 0 0 20px rgba(0,212,255,0.5), 0 0 40px rgba(139,92,246,0.3);
    transition: all 0.3s ease;
  }
  .btn-glow:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(0,212,255,0.8), 0 0 50px rgba(139,92,246,0.6);
  }
</style>

<section class="gradient-bg min-h-screen flex items-center justify-center relative overflow-hidden px-4">
  <div class="register-card mx-auto">
      <!-- Logo + Heading -->
    <div class="mb-6 text-center">
      <div class="mx-auto mb-2 h-16 w-16 flex items-center justify-center">
        <img src="/images/versatile.id.png" alt="Versatile ID Logo" class="h-18 w-18 object-contain">
      </div>
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Create Your Account</h2>
      <!-- <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Join us today and start your journey
      </p> -->
    </div>

    <form action="/register" method="POST" class="row g-3">
      <!-- Name Fields -->
      <div class="col-md-4">
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName" class="form-control" placeholder="Enter first name" required />
      </div>
      <div class="col-md-4">
        <label for="middleName">Middle Name</label>
        <input type="text" id="middleName" name="middleName" class="form-control" placeholder="Enter middle name" />
      </div>
      <div class="col-md-4">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Enter last name" required />
      </div>

      <!-- Gender + Nationality -->
      <div class="col-md-6">
        <label for="gender">Gender</label>
        <select id="gender" name="gender" class="form-select" required>
          <option value="" hidden>Select Gender</option>
          <option>Male</option>
          <option>Female</option>
          <option>Other</option>
        </select>
      </div>
      <div class="col-md-6">
        <label for="nationality">Nationality</label>
        <select name="nationality" id="nationality" class="form-select" required>
          <option value="" hidden>Select Nationality</option>
          <% countries.forEach(c => { %>
            <option value="<%= c.shortName %>"><%= c.name %></option>
          <% }) %>
        </select>
      </div>

      <!-- State + City -->
      <div class="col-md-6">
        <label for="state">State</label>
        <select name="state" id="state" class="form-select" disabled required>
          <option value="" hidden>Select State</option>
        </select>
      </div>
      <div class="col-md-6">
        <label for="city">City</label>
        <select name="city" id="city" class="form-select" disabled required>
          <option value="" hidden>Select City</option>
        </select>
      </div>

      <!-- Pincode + Phone -->
      <div class="col-md-6">
        <label for="pincode">Pincode</label>
        <input type="text" id="pincode" name="pincode" class="form-control" placeholder="Enter pincode" required />
      </div>
      <div class="col-md-6">
        <label for="phone">Phone No.</label>
        <input type="text" id="phone" name="phone" class="form-control" placeholder="Enter phone number" required />
      </div>

      <!-- Email + Password -->
      <div class="col-md-6">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" required />
      </div>
      <div class="col-md-6">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required minlength="6" />
      </div>

      <!-- Checkbox -->
      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="acceptedPolicies" id="acceptedPolicies" />
          <label class="form-check-label" for="acceptedPolicies">
            I accept the <a href="/policies">Policies & Terms</a>
          </label>
        </div>
      </div>


      <!-- Submit -->
      <div class="col-12 text-center">
        <button type="submit" class="btn btn-glow w-50">Create Account</button>
      </div>
    </form>
  </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/country-state-city.js"></script>
