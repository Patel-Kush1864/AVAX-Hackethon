<%- include('partials/header', { title: 'Register', active: 'register' }) %>
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    theme: {
      extend: {
        colors: {
          'electric-blue': '#00D4FF',
          'cyber-purple': '#8B5CF6',
          'dark-purple': '#4C1D95',
          'neon-blue': '#0EA5E9',
          'space-black': '#0F0F23',
          'dark-slate': '#1E1E3F',
        }
      }
    }
  }
</script>

<!-- Custom CSS -->
<style>
  body {
    font-family: 'Poppins', sans-serif;
    color: #fff;
  }

  /* Background Gradient */
  .gradient-bg {
    background: linear-gradient(135deg, #0F0F23 0%, #4C1D95 50%, #00D4FF 100%);
    background-size: 400% 400%;
    animation: gradientBG 15s ease infinite;
  }
  @keyframes gradientBG {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Card */
  .register-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    padding: 2rem;
    width: 100%;
    max-width: 950px;
    color: #fff;
    backdrop-filter: blur(12px);
    box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3), 0 0 40px rgba(139, 92, 246, 0.2);
    animation: float 6s ease-in-out infinite;
  }
  @keyframes float {
    0%,100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .register-card h2 {
    font-weight: 700;
    font-size: 2rem;
    text-shadow: 0 0 15px rgba(0,212,255,0.7);
  }

  
  .form-select option {
    background: #0F0F23; /* fallback when dropdown expands */
    color: #fff;
  }

  ::placeholder { color: rgba(255, 255, 255, 0.7); }
  option { color: #000; }

  /* Button */
  .btn-glow {
    background: linear-gradient(45deg, #00D4FF, #8B5CF6);
    border: none;
    border-radius: 50px;
    padding: 12px 35px;
    font-weight: bold;
    color: #fff;
    box-shadow: 0 0 20px rgba(0,212,255,0.5), 0 0 40px rgba(139,92,246,0.3);
    transition: all 0.3s ease;
  }
  .btn-glow:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(0,212,255,0.8), 0 0 50px rgba(139,92,246,0.6);
  }

  /* Checkbox link */
  .form-check-label a {
    color: #00d4ff;
    text-decoration: none;
  }
  .form-check-label a:hover { text-decoration: underline; }

  

  @media (max-width: 768px) {
    .register-card { padding: 1.5rem; }
    .register-card h2 { font-size: 1.6rem; }
  }
</style>

<section class="gradient-bg min-h-screen flex items-center justify-center relative overflow-hidden px-4">
  <!-- Background animation layer -->
  <div class="absolute inset-0 opacity-10 overflow-hidden">
    <div class="absolute top-20 left-10 w-2 h-2 bg-electric-blue rounded-full"></div>
    <div class="absolute top-40 right-20 w-3 h-3 bg-cyber-purple rounded-full"></div>
    <div class="absolute bottom-40 left-20 w-2 h-2 bg-electric-blue rounded-full"></div>
    <div class="absolute bottom-60 right-10 w-1 h-1 bg-cyber-purple rounded-full"></div>
  </div>

  <!-- Register card -->
  <div class="register-card mx-auto">
    <h2 class="text-center mb-4">Create Your Account</h2>

    <form action="/register" method="POST" class="row g-3">
      <div class="col-md-4">
        <input type="text" name="firstName" class="form-control" placeholder="First Name" required />
      </div>
      <div class="col-md-4">
        <input type="text" name="middleName" class="form-control" placeholder="Middle Name" />
      </div>
      <div class="col-md-4">
        <input type="text" name="lastName" class="form-control" placeholder="Last Name" required />
      </div>

      <div class="col-md-6">
        <select name="gender" class="form-select" required>
          <option value="" hidden>Select Gender</option>
          <option>Male</option>
          <option>Female</option>
          <option>Other</option>
        </select>
      </div>

      <div class="col-md-6">
        <select name="nationality" id="nationality" class="form-select" required>
          <option value="" hidden>Select Nationality</option>
          <% countries.forEach(c => { %>
            <option value="<%= c.shortName %>"><%= c.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="col-md-6">
        <select name="state" id="state" class="form-select" disabled required>
          <option value="" hidden>Select State</option>
        </select>
      </div>

      <div class="col-md-6">
        <select name="city" id="city" class="form-select" disabled required>
          <option value="" hidden>Select City</option>
        </select>
      </div>

      <div class="col-md-6">
        <input type="text" name="pincode" class="form-control" placeholder="Pincode" required />
      </div>
      <div class="col-md-6">
        <input type="text" name="phone" class="form-control" placeholder="Phone No." required />
      </div>

      <div class="col-md-6">
        <input type="email" name="email" class="form-control" placeholder="Email" required />
      </div>
      <div class="col-md-6">
        <input type="password" name="password" class="form-control" placeholder="Password" required minlength="6" />
      </div>

      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="acceptedPolicies" id="acceptedPolicies" />
          <label class="form-check-label" for="acceptedPolicies">
            I accept the <a href="/policies">Policies & Terms</a>
          </label>
        </div>
      </div>

      <div class="col-12 text-center">
        <button type="submit" class="btn btn-glow w-50">Create Account</button>
      </div>
    </form>
  </div>
</section>

<!-- jQuery + custom script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/country-state-city.js"></script>
